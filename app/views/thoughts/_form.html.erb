  </div>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <br>
    <%= image_tag thought.picture_url(:thumb) if thought.picture.present? %>
    <br>
    <br>
    <%= form.file_field :picture, id: :thought_picture %>
